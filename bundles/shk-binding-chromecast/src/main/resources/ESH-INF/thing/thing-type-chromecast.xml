<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="chromecast" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
